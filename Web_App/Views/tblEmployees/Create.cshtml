@model Web_App.tblEmployees

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2{
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
    label {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
</style>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Registrar nuevo empleado</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="Last_Name">Ingrese el Apellido: @if (Model != null) {@Model.First_Name }</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Last_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Last_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Firt_Name">Ingrese el Nombre: @if (Model != null) {@Model.First_Name }</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.First_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Years">Ingrese la Edad: @if (Model != null) { @Model.Years}</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Years, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Years, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="NroDocumento">Ingrese Nro Documento: @if(Model != null){@Model.NroDocument}</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NroDocument, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NroDocument, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Post">Cargo del empleado: @if (Model != null) { @Model.Post}</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Post, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Post, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Crear" class="btn btn-primary"><i class="fa fa-user"></i>
                Añadir empleado</button>
            </div>
        </div>
    </div>
}
<br />
<div>
    @Html.ActionLink("Regresar al menu ", "Index", null, new {@class = "btn btn-danger"})
</div>

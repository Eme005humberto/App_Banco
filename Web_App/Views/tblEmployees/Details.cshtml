@model Web_App.tblEmployees

@{
    ViewBag.Title = "Detalles del empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles del empleado</h2>
<style>
    h2 {
        font-family: 'Times New Roman', Times, serif;
    }

    label {
        font-family: 'Times New Roman', Times, serif;
    }
</style>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Apellido</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Last_Name)
        </dd>

        <dt>
           <label>Nombre</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.First_Name)
        </dd>

        <dt>
            <label>Edad</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Years)
        </dd>

        <dt>
            <label>Nro Documento</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NroDocument)
        </dd>

        <dt>
            <label>Cargo</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Post)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Modificar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Regresar al menu", "Index", null, new {@class = "btn btn-danger"})
</p>
